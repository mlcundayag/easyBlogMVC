<div class="card custom-card-style">
  <div class="card-header d-flex justify-content-between post-homepage">
    <h2 class="post-title">
      <a href="/post/{{post.id}}">
        <div>{{post.postTitle}}</div>
      </a>
    </h2>
    <div class="fs-6">posted by <span class="fw-bold">{{post.user.username}}</span> on {{format_date post.createdAt}} at {{format_time post.createdAt}}
    </div>
  </div>  
  <p class="card-body">
   {{post.postContent}}
  </p>
</div>
<input type="hidden" name="post-id" value="{{post.id}}"/>
{{#if loggedIn}}
<div class="card">
  <div class="card-header"></div>
  <form class="card-body" id="new-comment-form">
    
    <p class="form-label">Comment:</p>
    <textarea class="form-input" id="comment-body" name="comment-body"></textarea>
    <button type="submit" class="btn">Submit:</button>
  </form>
{{> comments post.comments}}
</div>
{{/if}}
<script src="/js/comment.js"></script>